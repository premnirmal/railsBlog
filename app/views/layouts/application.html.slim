doctype html
html
  head
    title = "Prem's blog"
    = stylesheet_link_tag "application", "coderay", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  header
    h2 Rails with Prem

  body id="content"
    wrapper
      banner
        home
          = link_to 'Blog', articles_path
          = link_to 'About', page_path('about')
        links
          = link_to 'https://github.com/premnirmal88' do
            i class="icon-github-alt icon-large"
          = link_to 'http://gplus.to/premnirmal88' do
            i class="icon-google-plus icon-large"
          
      main
        = yield        
      nav
        = render :partial => 'articles/index', :locals => {:articles => @articles}

      #push

    #footer
      | &copy Prem Nirmal
